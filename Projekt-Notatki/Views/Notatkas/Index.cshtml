        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_uzytkownik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tekst)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.przedmiot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.klasa)
            </td>
